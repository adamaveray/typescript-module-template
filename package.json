{
  "name": "",
  "author": "Adam Averay (https://adamaveray.com.au/)",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "exports": "./dist/index.modern.mjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.umd.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "microbundle --target=node --tsconfig=tsconfig.build.json",
    "dev": "microbundle watch --target=node",
    "format": "codeformat fix",
    "lint": "codeformat check",
    "prepack": "npm run build",
    "prepare": "husky install",
    "test": "jest",
    "test+coverage": "jest --coverage"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@averay/codeformat": "^0.1.14",
    "@babel/preset-typescript": "^7.21.0",
    "@types/jest": "^29.5.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  }
}
